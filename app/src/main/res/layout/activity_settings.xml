<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Settings">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:textColor="#FF03DAC5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Settings" />

    <ImageView
        android:id="@+id/changePassImage"
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/changepassword2" />

    <ImageView
        android:id="@+id/privacyPolicy"
        android:layout_width="0dp"
        android:layout_height="93dp"
        app:layout_constraintEnd_toEndOf="@+id/changePassImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/changePassImage"
        app:layout_constraintTop_toBottomOf="@+id/changePassImage"
        app:srcCompat="@drawable/privacypolicy" />

    <ImageView
        android:id="@+id/bugIssue"
        android:layout_width="0dp"
        android:layout_height="123dp"
        app:layout_constraintEnd_toEndOf="@+id/privacyPolicy"
        app:layout_constraintStart_toStartOf="@+id/privacyPolicy"
        app:layout_constraintTop_toBottomOf="@+id/privacyPolicy"
        app:srcCompat="@drawable/bug" />

    <ImageView
        android:id="@+id/signOut"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="@+id/bugIssue"
        app:layout_constraintStart_toStartOf="@+id/bugIssue"
        app:layout_constraintTop_toBottomOf="@+id/bugIssue"
        app:srcCompat="@drawable/signout" />

</androidx.constraintlayout.widget.ConstraintLayout>